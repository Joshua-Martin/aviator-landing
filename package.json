{
  "name": "demo-agent",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Demo agent monorepo with React UI, NestJS backend, and shared types",
  "author": "Demo Agent Team",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "pnpm --filter @demo-agent/functions run deploy",
    "dev": "node dev.js",
    "dev:ui": "pnpm --filter @demo-agent/react-ui dev",
    "dev:landing": "pnpm --filter @demo-agent/landing dev",
    "build": "pnpm build:ui && pnpm build:css && pnpm build:custom",
    "build:production": "pnpm build:ui && pnpm build:css:prod && pnpm build:custom",
    "build:ui": "pnpm --filter @demo-agent/react-ui build",
    "build:custom": "pnpm --filter @demo-agent/landing exec tsx ../build/build.ts",
    "build:landing": "pnpm --filter @demo-agent/landing build:prod",
    "build:css": "pnpm exec tailwindcss -i packages/landing/src/css/styles.css -o packages/landing/src/css/output.css --config tailwind.config.js",
    "build:css:prod": "pnpm exec tailwindcss -i packages/landing/src/css/styles.css -o packages/landing/src/css/output.css --config tailwind.config.js --minify",
    "start": "pnpm --filter @demo-agent/react-ui preview",
    "test": "pnpm --parallel --filter \"@demo-agent/*\" test",
    "test:ui": "pnpm --filter @demo-agent/react-ui test",
    "test:api": "pnpm --filter @demo-agent/nest test",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "pnpm --parallel --filter \"@demo-agent/*\" type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm --parallel --filter \"@demo-agent/*\" exec rm -rf dist",
    "clean:all": "pnpm clean && pnpm --parallel --filter \"*\" exec rm -rf node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.3.4",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jsdom": "^26.1.0",
    "live-server": "^1.2.2",
    "prettier": "^3.5.3",
    "typescript": "^5.2.2",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4",
    "tailwindcss": "catalog:",
    "autoprefixer": "catalog:",
    "postcss": "catalog:"
  }
}
